# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3000
APP_NAME=Telesales-Deposito-API
LOG_LEVEL=debug

# ==========================================
# DATABASE - SUPABASE POSTGRESQL
# ==========================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=10&pool_timeout=20&connect_timeout=10
DATABASE_URL="postgresql://postgres:your_password@db.supabase.co:5432/postgres?schema=public&connection_limit=10&pool_timeout=20&connect_timeout=10&sslmode=require"

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# ==========================================
# JWT
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_TEMP_TOKEN_EXPIRY=5m

# ==========================================
# 2FA / TOTP
# ==========================================
TOTP_APP_NAME=Telesales-Deposito
TOTP_WINDOW=1
TOTP_STEP=30

# ==========================================
# SECURITY
# ==========================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# ==========================================
# ML API (untuk update scores)
# ==========================================
ML_API_KEY=your-ml-api-key-here

# ==========================================
# MONITORING
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
